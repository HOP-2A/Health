generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(nanoid())
  username String
  email    String @unique
  password String

  illnesses Illness[]
  orders    Order[]
  createdAt DateTime  @default(now())
}

model Doctor {
  id              String  @id @default(nanoid())
  username        String
  email           String  @unique
  password        String
  profilePic      String?
  phoneNumber     String
  experienceYears Int

  reviews   DoctorReview[]
  createdAt DateTime       @default(now())
}

model Medicine {
  id          String   @id @default(nanoid())
  name        String
  description String
  ageLimit    String
  price       Int
  stock       Int
  imageUrls   String[]
  expiryDate  DateTime

  orderItems OrderItem[]

  recommendedBy DoctorReviewToMedicine[]

  createdAt DateTime @default(now())
}

model Illness {
  id        String   @id @default(nanoid())
  userId    String
  name      String
  details   String?
  createdAt DateTime @default(now())

  user   User          @relation(fields: [userId], references: [id])
  review DoctorReview?
}

model DoctorReview {
  id        String   @id @default(nanoid())
  doctorId  String
  illnessId String @unique
  notes     String
  createdAt DateTime @default(now())

  doctor  Doctor  @relation(fields: [doctorId], references: [id])
  illness Illness @relation(fields: [illnessId], references: [id])

  medicines DoctorReviewToMedicine[]
}

model DoctorReviewToMedicine {
  doctorReviewId String
  medicineId     String

  doctorReview DoctorReview @relation(fields: [doctorReviewId], references: [id])
  medicine     Medicine     @relation(fields: [medicineId], references: [id])

  @@id([doctorReviewId, medicineId])
  @@map("DoctorReview_Medicine")
}

model Order {
  id              String  @id @default(nanoid())
  userId          String
  totalPrice      Int
  status          String  @default("pending")
  discountApplied Boolean @default(false)

  user      User        @relation(fields: [userId], references: [id])
  items     OrderItem[]
  createdAt DateTime    @default(now())
}

model OrderItem {
  id         String @id @default(nanoid())
  orderId    String
  medicineId String
  quantity   Int    @default(1)
  price      Int

  order    Order    @relation(fields: [orderId], references: [id])
  medicine Medicine @relation(fields: [medicineId], references: [id])
}
 