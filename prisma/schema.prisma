model DoctorReviewToMedicine {
  doctorReviewId String
  medicineId     String
  doctorReview   DoctorReview @relation(fields: [doctorReviewId], references: [id])
  medicine       Medicine     @relation(fields: [medicineId], references: [id])

  @@id([doctorReviewId, medicineId])
  @@map("DoctorReview_Medicine")
}

model Order {
  id              String      @id @default(nanoid())
  userId          String
  totalPrice      Int
  status          String      @default("pending")
  discountApplied Boolean     @default(false)
  createdAt       DateTime    @default(now())
  user            User        @relation(fields: [userId], references: [id])
  items           OrderItem[]
}

model OrderItem {
  id         String   @id @default(nanoid())
  orderId    String
  medicineId String
  quantity   Int      @default(1)
  price      Int
  medicine   Medicine @relation(fields: [medicineId], references: [id])
  order      Order    @relation(fields: [orderId], references: [id])
}

model Like {
  id         String   @id @default(nanoid())
  userId     String
  medicineId String
  createdAt  DateTime @default(now())
  medicine   Medicine @relation(fields: [medicineId], references: [id])
  user       User     @relation(fields: [userId], references: [id])

  @@unique([userId, medicineId])
}

model UserMessage {
  id        String   @id @default(nanoid())
  userId    String
  illnessId String?
  chat      String
  doctorId  String
  replied   Boolean  @default(false)
  doctor    Doctor   @relation(fields: [doctorId], references: [id])
  illness   Illness? @relation(fields: [illnessId], references: [id])
  user      User     @relation(fields: [userId], references: [id])
}
